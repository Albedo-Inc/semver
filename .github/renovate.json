{
  "$schema": "http://json.schemastore.org/renovate",
  "extends": ["config:base", ":semanticCommitScopeDisabled", ":semanticCommitTypeAll(ci)"],
  "automerge": true,
  "automergeType": "branch",
  "baseBranches": ["main"],
  "updateInternalDeps": true,
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "automergeType": "branch"
  },
  "rangeStrategy": "update-lockfile",
  "commitMessage": "{{{commitMessagePrefix}}} ðŸ“¦ {{{commitMessageAction}}} {{{commitMessageTopic}}} {{{commitMessageExtra}}} {{{commitMessageSuffix}}}",
  "packageRules": [
    {
      "matchPackagePatterns": ["^@angular/", "^@nrwl/"],
      "groupName": "Nrwl workspace",
      "enabled": false
    }
  ]
}
