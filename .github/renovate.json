{
  "$schema": "http://json.schemastore.org/renovate",
  "extends": ["config:base", ":semanticCommitScopeDisabled", ":semanticCommitType(ci)"],
  "automerge": true,
  "automergeType": "branch",
  "baseBranches": ["main"],
  "semanticCommits": "enabled",
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "automergeType": "branch"
  },
  "rangeStrategy": "update-lockfile",
  "commitMessage": "{{{commitMessagePrefix}}} ðŸ“¦ {{{commitMessageAction}}} {{{commitMessageTopic}}} {{{commitMessageExtra}}} {{{commitMessageSuffix}}}",
  "packageRules": [
    {
      "packageNames": ["@nrwl/workspace"],
      "packagePatterns": ["^@nrwl/"],
      "groupName": "Nrwl workspace",
      "postUpgradeTasks": {
        "commands": [
          "yarn --frozen-lockfile --no-progress --non-interactive --prefer-offline",
          "yarn nx migrate @nrwl/workspace",
          "[ -f migrations.json ] && npx nx migrate --run-migrations=migrations.json"
        ],
        "fileFilters": ["**/**"]
      }
    }
  ]
}
